alias show-listening-ports="lsof -P -iTCP -sTCP:LISTEN"
function who-is-using-tcp-port() {
  echo ""
  echo -e "\033[1mWho is using port \033[48;5;202m\033[38;5;231m ${1}/tcp \033[0m\033[1m? \033[0m"
  echo ""
  lsof -P -iTCP:${1} -sTCP:LISTEN
}


